<html>
  <!-- uses the instance variable @student and the reader methods
   .name and .grade to display the student's information -->

  <h1>Student</h1>
  <div class="student">
    <h3>Name: <%= @student.name %></h3><br>
    <h4>Grade: <%= @student.grade %></h4>
  </div><br>

  <!-- Iterates over @courses to display the name and topic of each course -->

  <h1>Courses</h1>
  <% @courses.each do |course| %>
    <div class="course">
      <p>Name: <%= course.name %></p><br>
      <p>Topic: <%= course.topic %></p><br>
    </div><br>
  <% end %>
</html>
